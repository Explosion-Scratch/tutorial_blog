<script type="module">
		import * as _$ from "https://cdnjs.cloudflare.com/ajax/libs/Bijou.js/7.4.0/bijou-min.js";
		_$.each(document.querySelectorAll(".button"), (btn) => {
			btn.setAttribute("data-ripple", "");
			btn.setAttribute("data-event", "mousedown")
			btn.setAttribute("data-time", 300);
			btn.setAttribute("data-color", "lightseagreen");
			btn.setAttribute("data-opacity", ".5");
		})
		ripple();
</script>
<script>
	let lastScrollTop = 0;
	window.onscroll = function(){
		document.querySelector(".scroll-progress").style.width = `${((document.documentElement.scrollTop + document.body.scrollTop) / (document.documentElement.scrollHeight - document.documentElement.clientHeight) * 100)}%`;
		var st = window.pageYOffset || document.documentElement.scrollTop;
		if (st > lastScrollTop){
				document.querySelector("header").classList.remove("shown")
		} else {
				document.querySelector("header").classList.add("shown")
		}
		lastScrollTop = st <= 0 ? 0 : st; // For Mobile or negative scrolling
		if (window.scrollY < 150){
			document.querySelector("header").classList.add("shown");
		}
	}
	window.onload = () => {
		if (window.location.hash){
			document.querySelector(window.location.hash).scrollIntoView({block: "center"});
			document.querySelector(window.location.hash).classList.add("hash")
		}
	}
</script>